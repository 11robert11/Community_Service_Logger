<body id="page-top">
    
    
                   <!-- DataTales Example -->
          <div class="card shadow mb-4">
            <div class="card-header py-3">
              <h6 class="m-0 font-weight-bold text-primary">Activate Students</h6>
            </div>
            <div class="card-body">
              <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                  <thead>
                    <tr>
                      <th>First Name</th>
                      <th>Last Name</th>
                      <th>Student ID</th>
                      <th>Class Of</th>
                      <th>Activate?</th>
                    </tr>
                  </thead>
                  <tfoot>
                    <tr>
                      <th>First Name</th>
                      <th>Last Name</th>
                      <th>Student ID</th>
                      <th>Class Of</th>
                      <th>Activate?</th>
                    </tr>
                  </tfoot>
                  <tbody>
                    <% @users.each do |user| %>
                    <tr>
                      <th><%= user.first_name %></th>
                      <th><%= user.last_name %></th>
                      <th><%= user.student_id %></th>
                      <th><%= user.grade %></th>
                      <th><%= button_to "Activate", new_admin_yes_with_parameter(approve.id) %></th>
                    </tr>
                    <% end %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>

    
    
    
    
    
    
    
    
    
    
