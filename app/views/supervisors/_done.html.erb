<% @approved.each do |approved| %>
    <tr>    
        <th><%= User.find(approved.user_id).first_name %> <%= User.find(approved.user_id).last_name %></th>
        <th><%= pluralize(approved.content, 'Hour') %></th>
        <th><%= time_ago_in_words(approved.created_at) %> ago</th>
    </tr>
<% end %>
